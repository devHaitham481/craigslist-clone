
<div class="container d-flex align-items-center">
<div class="row">
<%= link_to "Home", root_path, class: "order-0 px-2 text-dark"%> >> 

<%= link_to "New Account", new_account_registration_path, class: "btn btn-outline-secondary btn-sm order-4 ml-5"%>

<% if account_signed_in? %>
<%= link_to "Sign Out", destroy_account_session_path, method: :delete, class: " btn btn-outline-secondary btn-sm order-4 ml-5" %>
<% else %>
<%= link_to "Sign in", new_account_session_path, class: "btn btn-outline-secondary btn-sm order-4"%>
<% end %>

<%= link_to "Dashboard", new_account_password_path, class: "btn btn-outline-secondary btn-sm order-3 ml-5" if account_signed_in? %>


 
<% if @post.present? && !@post.new_record? 
 category= @post.category
 parent = category.parent
%>

<% if parent.present? %>
<%= link_to parent.name, show_category_path(url: parent.url), class: "px-2"%> >>
<% end %>

<%= link_to category.name, show_category_path(url: category.url), class: "px-2" %> >>
<%= @post.title %>

<% elsif @category.present? 
parent = @category.parent
%>
<% if parent.present? %>
<%= link_to parent.name, show_category_path(url: parent.url), class: "order-0 px-5"%> >>
<% end %>

<%= @category.name %>

<%end%>
</div>